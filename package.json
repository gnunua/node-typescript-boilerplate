{
  "name": "node-typescript-boilerplate",
  "version": "0.0.1",
  "description": "node typescript app",
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  },
  "main": "build/src/main.js",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10",
    "jest": "~23.6.0",
    "prettier": "1.15.3",
    "rimraf": "~2.6.2",
    "ts-jest": "~23.10.5",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-microsoft-contrib": "~6.0.0",
    "tsutils": "~3.5.2",
    "typescript": "~3.2.1"
  },
  "scripts": {
    "postinstall": "echo '**' && && npm run build",
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json && echo '-- ---- -------- ---------- --------' ",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "serve": "node build/src/main.js",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "author": "Jakub Synowiec <github@jakubsynowiec.info>",
  "license": "Apache-2.0",
  "dependencies": {
    "tslib": "~1.9.3"
  }
}
